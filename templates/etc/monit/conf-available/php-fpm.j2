check process php-fpm with pidfile /var/run/php/{{ php_fpm_process_name }}.pid
    start program = "/etc/init.d/{{ php_fpm_process_name }} start"
    stop program  = "/etc/init.d/{{ php_fpm_process_name }} stop"
    if 3 restarts within 5 cycles then timeout
